@model TimPhongTro.Models.NGUOIDUNG

@{
    ViewBag.Title = "SuaNguoiDung";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Chỉnh sửa thông người dùng</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    @using (Html.BeginForm("SuaNguoiDung", "QLyTaiKhoan", FormMethod.Post, new { id = Model.MaKH }))
                    {
                        <div class="form-group">
                            <label class="col-md-12">Tên người dùng</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(Model => Model.TenKH, new { @class = "form-control form-control-line", @value = "Model.TenKH" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12">Tài khoản</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(Model => Model.TaiKhoan, new { @class = "form-control form-control-line", @value = "Model.TaiKhoan" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-12">Số điện thoại</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(Model => Model.Sdt, new { @class = "form-control form-control-line", @value = "Model.Sdt" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-12">Email</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control form-control-line", @value = "Model.Email" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Địa chỉ</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(Model => Model.DiaChi, new { @class = "form-control form-control-line", @value = "Model.DiaChi" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Giới tính</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(Model => Model.GioiTinh, new { @class = "form-control form-control-line", @value = "Model.GioiTinh" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-success">Cập Nhật</button>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

