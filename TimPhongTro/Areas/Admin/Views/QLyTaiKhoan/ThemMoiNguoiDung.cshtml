@model TimPhongTro.Models.NGUOIDUNG

@{
    ViewBag.Title = "ThemMoiNguoiDung";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Thêm người dùng mới</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <a href="http://wrappixel.com/templates/pixeladmin/" target="_blank" class="btn btn-danger pull-right m-l-20 btn-rounded btn-outline hidden-xs hidden-sm waves-effect waves-light">Upgrade to Pro</a>
                <ol class="breadcrumb">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Profile page</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    @using (Html.BeginForm("ThemMoiNguoiDung", "QLyTaiKhoan", FormMethod.Post, new { @class = "form-horizontal form-material" }))
                    {
                        <div class="form-group">
                            <label class="col-md-12">Tên người dùng</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.TenKH, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12">Tài khoản</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.TaiKhoan, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Mật khẩu</label>
                            <div class="col-md-12">
                                @Html.PasswordFor(x => x.MatKhau, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Số điện thoại</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.Sdt, new { @class = "form-control form-control-line" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-12">Email</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Địa chỉ</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.DiaChi, new { @class = "form-control form-control-line", @placeholder = "Nhập địa chỉ" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Giới tính</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.GioiTinh, new { @class = "form-control form-control-line", @placeholder = "Nhập giới tính" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-success">Thêm Ngay</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

