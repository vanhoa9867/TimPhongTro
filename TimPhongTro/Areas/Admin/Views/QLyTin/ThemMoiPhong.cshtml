@model TimPhongTro.Models.PHONGTRO

@{
    ViewBag.Title = "ThemMoiPhong";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Thêm phòng trọ mới</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    @using (Html.BeginForm("ThemMoiPhong", "QLyTin", FormMethod.Post, new { @class = "form-horizontal form-material" }))
                    {
                        <div class="form-group">
                            <label class="col-md-12">Số phòng: </label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.SoPhong, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12">Diện tích: </label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.DienTich, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Địa chỉ: </label>
                            <div class="col-md-12">
                                @Html.TextAreaFor(x => x.GiaThue, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Loại: </label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.Loai, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Mô tả: </label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.MoTa, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-success">Thêm Ngay</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
