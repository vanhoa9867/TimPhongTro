@model TimPhongTro.Models.PHONGTRO

@{
    ViewBag.Title = "Xóa tin phòng - Adnim";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div class="white-box">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="box-title">Xóa tin phòng</h3>
                        <p class="text-muted">Bạn có thật sự muốn xóa tin phòng này</p>
                    </div>
                    <div class="card-body">
                        <div>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    Mã phòng:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.MaPhong)
                                </dd>

                                <dt>
                                    Số phòng:
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.SoPhong)
                                </dd>

                                <dt>
                                    Diện tích: 
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.DienTich)
                                </dd>


                                <dt>
                                    Giá thuê: 
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.GiaThue)
                                </dd>
                                <dt>
                                    Địa chỉ
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.DiaChi)
                                </dd>

                                <dt>
                                   Loại: 
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Loai)
                                </dd>
                            </dl>
                            <hr />
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Xóa" class="btn btn-danger" />
                                    <a href="@Url.Action("Index", "QLyTaiKhoan")">
                                        <button type="button" class="btn btn-default">Trở về</button>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



