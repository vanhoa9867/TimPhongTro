@model TimPhongTro.Models.NGUOIDUNG
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="entry-title"><span>Đăng Ký</span> </h1>
            <hr>
            @using (Html.BeginForm("DangKy", "NguoiDung", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="control-label col-sm-3">Email <span class="text-danger">*</span></label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @placeholder = "Email" })
                        </div>
                        <small> Email của bạn đang được sử dụng để đảm bảo an toàn cho tài khoản, ủy quyền và phục hồi truy cập của bạn. </small>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-3">Tài khoản <span class="text-danger">*</span></label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.TextBoxFor(Model => Model.TaiKhoan, new { @class = "form-control", @placeholder = "Tài khoản" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Mật khẩu <span class="text-danger">*</span></label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(Model => Model.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                            <input type="password" class="form-control" name="cpassword" id="cpassword" placeholder="Nhập lại mật khẩu" value="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Họ và tên <span class="text-danger">*</span></label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(Model => Model.TenKH, new { @class = "form-control", @placeholder = "Họ và tên" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Giới tính <span class="text-danger">*</span></label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                            @Html.TextBoxFor(Model => Model.GioiTinh, new { @class = "form-control", @placeholder = "Nhập giới tính" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Số điện thoại <span class="text-danger">*</span></label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                            @Html.TextBoxFor(Model => Model.Sdt, new { @class = "form-control", @placeholder = "Số điện thoại" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-offset-3 col-md-12"><span class="text-muted"><span class="label label-danger">Chú ý:-</span> Nhấp vào đăng ký khi bạn đồng ý với <a href="#">Điều khoản</a> của chúng tôi và bạn đã đọc <a href="#">Chính sách</a>, bao gồm cả <a href="#">Sử dụng cookie </a>.</span> </div>
                </div>
                @Html.Raw(ViewBag.errorsignup1)
                <div class="form-group">
                    <div class="col-xs-offset-3 col-md-12">
                        <input name="Submit" type="submit" value="Đăng ký" class="btn btn-primary">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
