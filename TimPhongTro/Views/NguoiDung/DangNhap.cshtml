@model TimPhongTro.Models.NGUOIDUNG
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section stylesheets{
    <link href="~/Content/css/csslogin.css" rel="stylesheet" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
}

<div class="container">
    <div class="omb_login">
        <h3 class="omb_authTitle">Đăng nhập hoặc <a href="@Url.Action("DangKy","NguoiDung")">Đăng ký</a></h3>
        <div class="row omb_row-sm-offset-3 omb_socialButtons">
            <div class="col-xs-4 col-sm-2">
                <a href="#" class="btn btn-lg btn-block omb_btn-facebook">
                    <i class="fa fa-facebook visible-xs"></i>
                    <span class="hidden-xs">Facebook</span>
                </a>
            </div>
            <div class="col-xs-4 col-sm-2">
                <a href="#" class="btn btn-lg btn-block omb_btn-twitter">
                    <i class="fa fa-twitter visible-xs"></i>
                    <span class="hidden-xs">Twitter</span>
                </a>
            </div>
            <div class="col-xs-4 col-sm-2">
                <a href="#" class="btn btn-lg btn-block omb_btn-google">
                    <i class="fa fa-google-plus visible-xs"></i>
                    <span class="hidden-xs">Google+</span>
                </a>
            </div>
        </div>
        <div class="row omb_row-sm-offset-3 omb_loginOr">
            <div class="col-xs-12 col-sm-6">
                <hr class="omb_hrOr">
                <span class="omb_spanOr">hoặc</span>
            </div>
        </div>
        @using (Html.BeginForm("DangNhap", "NguoiDung", FormMethod.Post, new { @class = "omb_loginForm" }))
        {
            <div class="row omb_row-sm-offset-3">
                <div class="col-xs-12 col-sm-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-user"></i>
                            </span>
                        </div>
                        @Html.TextBoxFor(Model => Model.TaiKhoan, new { @class = "form-control", @placeholder = "Tài khoản" })
                    </div>
                    <span class="help-block"></span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>
                        @Html.PasswordFor(Model => Model.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    </div>
                    <div class="text-danger">
                        @Html.Raw(ViewBag.errorLogin1)
                    </div>
                    <div class="row omb_row-sm-offset-3">
                        <div class="col-xs-12 col-sm-3">
                            <p class="omb_forgotPwd">
                                <input type="checkbox" value="remember-me"> Nhớ tài khoản
                            </p>
                        </div>
                        <div class="col-xs-12 col-sm-3">
                            <p class="omb_forgotPwd">
                                <a href="#"> Quên mật khẩu?</a>
                            </p>
                        </div>
                    </div>
                    <div class="input-group">
                        <input type="submit" value="Đăng nhập" class="btn btn-lg btn-primary btn-block" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
