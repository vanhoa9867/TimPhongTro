
@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section stylesheets {
    <link href="~/Content/css/ThongTin.css" rel="stylesheet" />
}
<div class="center-container">
    <div class="w3ls_banner_info">
        <h1>Thông tin của bạn</h1>
        <div class="profile">
            <div class="wrap">
                <div class="profile-main">
                    <div class="profile-pic wthree">
                        <img src="~/Images/avatar/Download-1525567810.png" alt="" />
                        <h3>@ViewBag.tennd</h3>
                        <div class="w3ls-agile-left">
                            <ul class="address">
                                <li>
                                    <ul class="address-text">
                                        <li><b>Giới tính </b></li>
                                        <li>: </li>
                                        <li> <span class="w3">@ViewBag.gioitinh</span></li>
                                    </ul>
                                </li>
                                <li>
                                    <ul class="address-text">
                                        <li><b>Tài khoản </b></li>
                                        <li>: </li>
                                        <li> <span class="w3">@ViewBag.taikhoan</span></li>
                                    </ul>
                                </li>
                                <li>
                                    <ul class="address-text">
                                        <li><b>Số điện thoại </b></li>
                                        <li>: </li>
                                        <li> <span class="w3">@ViewBag.sdt</span></li>
                                    </ul>
                                </li>
                                <li>
                                    <ul class="address-text">
                                        <li><b>Email </b></li>
                                        <li>: </li>
                                        <li> <span class="w3">@ViewBag.email </span></li>
                                    </ul>
                                </li>
                                <li>
                                    <ul class="address-text">
                                        <li><b>Địa chỉ </b></li>
                                        <li>: </li>
                                        <li><span class="w3">@ViewBag.diachi</span></li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="profile-ser">
                        <div class="awards-agileinfo  w3ls-section">
                            <div class="awardsw3-agileits banner-agileinfo">
                                <div class="container">
                                    <div class="w3ls_banner_bottom_grids">
                                        <div class=" w3ls_about_guage">
                                            <div class="demo">
                                                <div class="demo-1" data-percent="70"></div>
                                                <a href="@Url.Action("SuaThongTin","NguoiDung")/@ViewBag.mand">Chỉnh sửa</a>
                                            </div>
                                        </div>
                                        <div class=" w3ls_about_guage">
                                            <div class="demo">
                                                <div class="demo-1" data-percent="75"></div>
                                                <a>Đổi mật khẩu</a>
                                            </div>
                                        </div>
                                        <div class=" w3ls_about_guage">
                                            <div class="demo">
                                                <div class="demo-1" data-percent="85"></div>
                                                <a href="@Url.Action("Index","Home")">Quay lại</a>
                                            </div>
                                        </div>
                                        <div class="clear"> </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Content/js/jquery.circlechart.js"></script>
    <script>
        $('.demo-1').percentcircle();

        $('.demo-2').percentcircle({
            animate: false,
            diameter: 100,
            guage: 3,
            coverBg: '#000',
            bgColor: '#ff0000',
            fillColor: '#000',
            percentSize: '50px',
            percentWeight: 'normal'
        });
    </script>
}