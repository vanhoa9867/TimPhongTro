
@{
    ViewBag.Title = "Chi tiết phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="hero-banner hero-banner-sm">
    <div class="container text-center">
        <h2>Chi Tiết Phòng</h2>
        <nav aria-label="breadcrumb" class="banner-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
            </ol>
        </nav>
    </div>
</section>
<div class="container">
    <h3 class="pb-3 mb-4 font-italic border-bottom"></h3>
    @if (@Model.Loai == "Phòng trọ")
    {
        <div class="row">
            <div class="col-md-7">
                <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-primary">Thông tin chi tiết </strong>
                        <h6 class="mb-0"></h6>
                        <a class="text-dark" href="#">Loại: @Model.Loai</a>
                        <div class="mb-1 text-dark ">Ngày đăng: @Model.NgayCapNhat</div>
                        <div class="mb-1 text-dark ">Địa chỉ: @Model.DiaChi</div>
                        <div class="mb-1 text-dark ">Giá Thuê: @string.Format("{0:0,0 vnđ }", Model.GiaThue)</div>
                        <p class="card-text2 mb-auto">Mô tả: @Model.MoTa</p>
                        @if (Session["NguoiDung"] == null)
                        {
                            <a class="btn btn-outline-primary btn-sm" role="button" href="@Url.Action("DangNhap","NguoiDung",new { id = Model.MaPhong})">Thuê phòng</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary btn-sm" role="button" href="@Url.Action("Thue","PhongNhaOGhep",new { id = Model.MaPhong})">Thuê phòng</a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-primary">Người đăng: @ViewBag.TenKH</strong>
                        <h6 class="mb-0"></h6>
                        <p><a class="text-dark" href="#">Sdt: @ViewBag.Sdt</a></p>
                        <p><a class="text-dark" href="#">Email: @ViewBag.Email</a></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3"><strong class="d-inline-block mb-2 text-primary">Ảnh phòng</strong></div>
            <div class="col-sm-6"><img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src="~/@Model.Anh" style="width: 100%; height: auto;"></div>
            <div class="col-sm-3"></div>
        </div>
    }
    else if (@Model.Loai == "Ở ghép")
    {
        <div class="row">
            <div class="col-md-7">
                <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-primary">Thông tin chi tiết</strong>
                        <h6 class="mb-0"></h6>
                        <a class="text-dark" href="#">Loại: @Model.Loai</a>
                        <div class="mb-1 text-dark ">Ngày đăng: @Model.NgayCapNhat</div>
                        <div class="mb-1 text-dark ">Số người: @Model.SoNguoiO</div>
                        <div class="mb-1 text-dark ">Địa chỉ: @Model.DiaChi</div>
                        <div class="mb-1 text-dark ">Giá Thuê: @string.Format("{0:0,0 vnđ }", Model.GiaThue)</div>
                        <p class="card-text2 mb-auto">Mô tả: @Model.MoTa</p>
                        @if (Session["NguoiDung"] == null)
                        {
                            <a class="btn btn-outline-primary btn-sm" role="button" href="@Url.Action("DangNhap","NguoiDung",new { id = Model.MaPhong})">Thuê phòng</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary btn-sm" role="button" href="@Url.Action("Thue","PhongNhaOGhep",new { id = Model.MaPhong})">Thuê phòng</a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-primary">Người đăng: @ViewBag.TenKH</strong>
                        <h6 class="mb-0"></h6>
                        <p><a class="text-dark" href="#">Số điện thoại: @ViewBag.Sdt</a></p>
                        <p><a class="text-dark" href="#">Email: @ViewBag.Email</a></p>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3"><strong class="d-inline-block mb-2 text-primary">Ảnh phòng</strong></div>
            <div class="col-sm-6"><img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src="~/@Model.Anh" style="width: 100%; height: auto;"></div>
            <div class="col-sm-3"></div>
        </div>
    }
    <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#configurator" data-width="11  00" data-numposts="7"></div>
</div>
